<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.cs491.kayla.classsample01_currencyconverter.welcome_activity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helloworldmsg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Implicit"
        android:id="@+id/buttonImplicit"
        android:layout_below="@+id/userNameText"
        android:layout_toRightOf="@+id/helloworldmsg"
        android:layout_toEndOf="@+id/helloworldmsg"
        android:layout_marginTop="37dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explicit"
        android:id="@+id/buttonExplicit"
        android:layout_alignTop="@+id/buttonImplicit"
        android:layout_alignRight="@+id/userNameText"
        android:layout_alignEnd="@+id/userNameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:ems="10"
        android:id="@+id/userNameText"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/helloworldmsg"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
